	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set BASE_URL environment variable if not already set",
					"if (!pm.environment.get(\"BASE_URL\")) {",
					"    pm.environment.set(\"BASE_URL\", \"http://localhost:5000\");",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Extract session cookie after successful login",
					"if (pm.request.url.includes(\"/api/auth/login\") && pm.response.code === 200) {",
					"    const cookieHeader = pm.response.headers.get(\"Set-Cookie\");",
					"    if (cookieHeader) {",
					"        const sessionCookie = cookieHeader.split(\";\")[0];",
					"        pm.environment.set(\"session_cookie\", sessionCookie);",
					"    }",
					"}",
					"// For subsequent requests, add the session cookie",
					"if (pm.environment.get(\"session_cookie\") && !pm.request.headers.has(\"Cookie\")) {",
					"    pm.request.headers.add({ key: \"Cookie\", value: pm.environment.get(\"session_cookie\") });",
					"}"
				]
			}
		}
	],
